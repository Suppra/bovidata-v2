rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Imágenes de bovinos
    match /bovines/{bovineId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (getUserRole() == 'Ganadero' || getUserRole() == 'Empleado') &&
        request.resource.size < 10 * 1024 * 1024 && // Max 10MB
        request.resource.contentType.matches('image/.*');
    }
    
    // Imágenes de tratamientos
    match /treatments/{treatmentId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (getUserRole() == 'Veterinario' || getUserRole() == 'Ganadero') &&
        request.resource.size < 5 * 1024 * 1024 && // Max 5MB
        request.resource.contentType.matches('image/.*');
    }
    
    // Documentos y reportes
    match /reports/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == userId || getUserRole() == 'Ganadero') &&
        request.resource.size < 50 * 1024 * 1024; // Max 50MB for PDFs
    }
    
    // Respaldos de datos
    match /backups/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == userId || getUserRole() == 'Ganadero');
    }
    
    // Función auxiliar para obtener el rol del usuario
    function getUserRole() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.rol;
    }
  }
}