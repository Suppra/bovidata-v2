# BoviData V2 - Variables de Entorno
# Copia este archivo como .env.local y actualiza con tus valores reales

# Firebase Configuration (Sin Storage - Solo Firestore gratis)
FIREBASE_PROJECT_ID=bovidata-v2-prod
FIREBASE_API_KEY=tu-api-key-aqui
FIREBASE_AUTH_DOMAIN=bovidata-v2-prod.firebaseapp.com
FIREBASE_MESSAGING_SENDER_ID=tu-sender-id

# App Configuration
APP_NAME=BoviData V2
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Development URLs
DEV_API_URL=http://localhost:3000
PROD_API_URL=https://api.bovidata.com

# Features Flags
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=true
ENABLE_PERFORMANCE=true

# Debugging
DEBUG_MODE=false
LOG_LEVEL=info